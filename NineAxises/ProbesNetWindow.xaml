<Window x:Class="Probes.ProbesNetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Probes"
        mc:Ignorable="d"
        Title="ProbesSocketWindow" Height="500" Width="860">
    <ScrollViewer x:Name="scrolls" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="Auto">
        <ScrollViewer.Content>
            <StackPanel x:Name="ContainerGrid" Orientation="Vertical"   ScrollViewer.VerticalScrollBarVisibility="Auto">
                <local:DistanceMeasurementNetControl/>
            </StackPanel>
        </ScrollViewer.Content>
    </ScrollViewer>

</Window>
